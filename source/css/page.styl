@import "nib"
@import "_variables"
@import "base"

navbar_height = 0  //85px

body
  grid-template-columns: 4fr 1fr
  grid-template-rows: 2fr 4fr 80px
  grid-template-areas: 'header header' 'main sidebar' 'footer footer'
  @media mq_mobile
    grid-template-columns: auto
    grid-template-rows: 2fr auto auto 80px
    grid-template-areas: 'header' 'main' 'sidebar' 'footer'

.header
  display: block
  background-color: color_header_bg

.title
  margin-top: navbar_height
  text-align: left
  line-height: 150px
  padding: 30px 20px
  position: relative
  height: 300px
  align-items: center
  justify-items: left
  img
    z-index: 10
    position: absolute
    top: 0
    left: 0
    bottom: 0
    right: 0
    width: 100%
    height: 100%
    overflow: hidden
  h1
    z-index: 20
    position: absolute
    left: 10px
    right: 0
    top: 50%
    transform: translateY(-40%)
    font-family: font_default4
    font-size: 100pt
    color: color_page_title
    text-shadow: 3px 3px color_title_shadow

.navbar
  z-index: 30
  position: fixed
  top: 0
  left: 0
  width: 100%
  display: grid
  grid-template-columns: 1fr 2fr
  align-items: center
  justify-items: left
  padding: 15px 25px
  // background-color: alpha(color_navbar_bg, 0.9)
  background-color: color_navbar_bg
  border-bottom: 1px solid color_bg
  a
    color: color_link
    font-weight: 800
    padding: 7px 10px
  .nav
    display: grid
    justify-items: right
    text-align: right
    width: 100%
    a
      transition-duration: 200ms
      transition-property: color, background-color
      &:hover, &.active_link
        color: color_link_hover
        background-color: color_text
        border-radius: 5px
  ul
    text-transform: uppercase
    @media mq-mobile
      display: none
  ul li
    display: inline-block
    padding: 5px 10px
    font-size: 13px
 .sidenav_open
    display: none
    font-size: 30px
    @media mq-mobile
      display: block

#sidenav
  z-index: 100
  display: none
  position: absolute
  top: 0
  right: 0
  min-width: 60%
  border-radius: 0 0 0 15px
  overflow-x: hidden
  // transition-duration: 500ms
  background-color: color_shadow
  justify-items: center
  text-align: center
  a
    display: block
    color: color_sidenav_link
    opacity: 0.6
    text-shadow: 0 1px color_shadow
    transition-duration: 200ms
    transition-property: opacity
    padding: 10px
    &:hover
      opacity: 1
      background-color: color_sidenav_hover
  .sidenav_close
    font-size: 40px
    text-align: right
    padding-right: 40px
    &:hover
      background-color: transparent

.main
  line-height: 30px
  padding: 30px 45px
  & > p:first-letter  // Apply styles to p:first-of-type, which may or may not be :first-child
    font-size: 200%
  & > p ~ p:first-letter  // Undo the above styles for every subsequent p
    font-size: 20px

.article_heading
  word-break: break-all

.article_header, .article_footer, .article_meta
  display: block
  font-size: 16px
  line-height: 16px
  margin: 20px 0

.fa
  margin: 0 5px

.article_share
  strong
    display: inline-block
    @media mq_mobile
      display: block
  a
    display: inline-block
    font-size: 30px
    padding-left: 10px
    transition-duration: 500ms
    transition-property: transform
    &:hover
      transform: scale(1.2)
  .article_share_facebook
    color: #3A559F
  .article_share_twitter
    color: #1BB2E9
  .article_share_pinterest
    color: #CB2027
  .article_share_xing
    color: #1E8687
  .article_share_linkedin
    color: #0077B5

.article_meta, .excerpt_meta
  font-size: 12px
  line-height: 16px
  .meta_author, .meta_date, .meta_comment
    display: block

.excerpt_more
  display: block

.sidebar
  padding: 20px
  strong
    display: block
    text-transform: uppercase
  a + a
    padding: 5px 
