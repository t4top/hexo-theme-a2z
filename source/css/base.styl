//global-reset()
*, *::before, *::after
  box-sizing: border-box
  margin: 0

html, body
  height: 100%
  margin: 0
  color: color_text
  font-size: 16px
  @media mq_ultrawide
    font-size: 32px

body
  width: 100%
  grid-gap: 0
  font-family: font_default
  display: grid

a
  text-decoration: none

ol, ul
  list-style-type: none

.required
  color: color_contact_error

.hideme
  display: none

.site_nav
  grid-area: nav

.site_header
  grid-area: header

.site_main
  grid-area: main

.site_aside
  grid-area: aside

.site_footer
  grid-area: footer

.site_footer
  padding: 1rem 2rem
  background-color: color_footer_bg
  color: color_footer_text
  opacity: 0.5
  display: grid
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr))
  align-items: center;
  .footer_copyright
    font-size: small
    text-align: left
  .footer_links
    text-align: right
  a
    color: color_home_link
    &:hover
      color: color_home_link_hover
      text-decoration: underline
